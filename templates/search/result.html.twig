{# templates/search/results.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h2>Wyniki wyszukiwania</h2>

    {% if phones is empty %}
        <p>Brak wyników dla zapytania.</p>
    {% else %}
        <ul>
            {% for phone in phones %}
                <li>{{ phone.company }} {{ phone.firstname }} {{ phone.lastname }} {{ phone.number }} </li>

            {% endfor %}
        </ul>
    {% endif %}
    
    <a href="{{ path('search_page') }}">Wróć do formularza wyszukiwania.</a><br>
    <a href="{{ path('home_page') }}">Wróć na stronę główną.</a>
{% endblock %}
